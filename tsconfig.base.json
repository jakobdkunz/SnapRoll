{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@snaproll/ui": ["packages/ui/src"],
      "@snaproll/lib": ["packages/lib/src"],
      "@snaproll/convex-client": ["packages/convex-client/src"],
      "@snaproll/config": ["packages/config/src"]
    }
  }
}

